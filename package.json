{
  "name": "express-ws",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "lint": "eslint .",
    "start:dev": "cross-env NODE_ENV=development npm run migrate && cross-env NODE_ENV=development nodemon index ",
    "migrate": "sequelize-cli db:migrate",
    "test": "cross-env NODE_ENV=test jest --watch --verbose",
    "posttest": "cross-env NODE_ENV=test node test-cleanup",
    "pretest:staging": "cross-env NODE_ENV=staging npm run migrate",
    "test:staging": "cross-env NODE_ENV=staging jest -f . --verbose --runInBand --forceExit",
    "posttest:staging": "cross-env NODE_ENV=staging node test-cleanup"
  },
  "author": "Matheus Arag√£o",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "detect-file-type": "^0.2.8",
    "express": "^4.17.1",
    "express-validator": "^6.14.2",
    "nodemailer": "^6.7.6",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.0",
    "sequelize-cli": "^6.5.2",
    "sqlite3": "^5.0.8",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "smtp-server": "^3.11.0",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  }
}
